@page
@using Microsoft.AspNetCore.SignalR;
@using InventorySystem.Models;
@model InventorySystem.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Create Product";
}

<h2 class="text-center text-primary my-4">Create Product</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <form method="post" class="border p-4 shadow-sm rounded bg-light">
                <div class="mb-3">
                    <label asp-for="Product.ProductName" class="form-label">Name</label>
                    <input asp-for="Product.ProductName" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Quantity" class="form-label">Quantity</label>
                    <input asp-for="Product.Quantity" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price" class="form-label">Price</label>
                    <input asp-for="Product.Price" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Product.RestockThreshold" class="form-label">Restock Threshold</label>
                    <input asp-for="Product.RestockThreshold" class="form-control" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Optional Bootstrap link if not already included -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
