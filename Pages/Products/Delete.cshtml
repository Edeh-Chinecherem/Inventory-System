@page "{id:int}"
@using Microsoft.AspNetCore.SignalR
@using InventorySystem.Models
@model InventorySystem.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p class="fs-5">
                Are you sure you want to delete <strong class="text-danger">@Model.Product.ProductName</strong>?
            </p>

            <form method="post">
                <input type="hidden" asp-for="Product.Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Yes, Delete
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<!-- Optional Bootstrap & Icons CDN (if not already included in layout) -->
