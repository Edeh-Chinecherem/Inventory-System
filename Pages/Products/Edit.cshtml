@page "{id:int}"
@using Microsoft.AspNetCore.SignalR;
@using InventorySystem.Models;
@model InventorySystem.Pages.Products.EditProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<h2 class="mb-4 text-center">Edit Product</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <form method="post" class="border p-4 rounded shadow bg-light">
                <input type="hidden" asp-for="Product.Id" />

                <div class="mb-3">
                    <label asp-for="Product.ProductName" class="form-label">Name</label>
                    <input asp-for="Product.ProductName" class="form-control" />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Quantity" class="form-label">Quantity</label>
                    <input asp-for="Product.Quantity" class="form-control" />
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price" class="form-label">Price</label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.RestockThreshold" class="form-label">Restock Threshold</label>
                    <input asp-for="Product.RestockThreshold" class="form-control" />
                    <span asp-validation-for="Product.RestockThreshold" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning w-100">Update Product</button>
            </form>

        </div>
    </div>
</div>

<!-- Optional: Bootstrap CSS if not already included globally -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
