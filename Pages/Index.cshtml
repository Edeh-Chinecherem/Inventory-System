@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <!-- Include Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<style>
    
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(to right, #74ebd5, #acb6e5);
        color: #333;
    }

    .welcome {
        position: relative;
        background: url('/images/hero3-background.jpg') no-repeat center center;
        background-size: cover;
        height: 300px;
        border-radius: 12px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .welcome::before {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.5); /* dark overlay */
        backdrop-filter: blur(4px); /* blur effect */
        z-index: 1;
    }

    .welcome h2,
    .welcome p {
        position: relative;
        z-index: 2;
        color: #fff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8); /* improve legibility */
    }

    .welcome h2 {
        font-size: 3rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    .welcome p {
        margin-bottom: 1rem;
        text-align: center;
        font-size: 1.2rem;
    }

    #typedText {
        font-weight: bold;
        font-size: 3rem;
        color: white;
    }

    #cursor {
        display: inline-block;
        font-weight: bold;
        font-size: 3rem;
        color: white;
        animation: blink 0.7s steps(2, start) infinite;
    }

    @@keyframes blink {
        to {
            visibility: hidden;
        }
    }

    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .card {
        background: #ffffff;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2);
        background: linear-gradient(to right, #ffecd2, #fcb69f);
        color: #2c3e50;
    }

    .card i {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #2c3e50;
    }

    nav {
        background-color: #34495e;
        padding: 1rem 2rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    nav a {
        color: #ecf0f1;
        text-decoration: none;
        margin: 0 15px;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    nav a:hover {
        color: #1abc9c;
    }
</style>

<div class="container">
    <div class="welcome">
        <h2><span id="typedText"></span><span id="cursor">|</span></h2>
        <p>Effortlessly manage your inventory, sales, and business insights.</p>
    </div>

    <div class="card-grid">
        <!-- Products Card -->
        <div class="card" onclick="location.href='/Products'">
            <i class="fas fa-box"></i>
            <h3>Products</h3>
            <p>Manage your products inventory and stock levels.</p>
        </div>
        <!-- Dashboard Card -->
        <div class="card" onclick="location.href='/Dashboard'">
            <i class="fas fa-tachometer-alt"></i>
            <h3>Dashboard</h3>
            <p>Track business performance and key metrics.</p>
        </div>
        <!-- Sales Card -->
        <div class="card" onclick="location.href='/Sales'">
            <i class="fas fa-shopping-cart"></i>
            <h3>Sales</h3>
            <p>Record and monitor sales with receipt generation.</p>
        </div>
    </div>
</div>

<script>
    const text = "Welcome to Inter Mart";
    const typedText = document.getElementById("typedText");
    const cursor = document.getElementById("cursor");

    let index = 0;

    function type() {
        if (index < text.length) {
            typedText.textContent += text.charAt(index);
            index++;
            setTimeout(type, 100);
        } else {
            cursor.style.animation = "none";
            cursor.style.display = "none";
        }
    }

    window.onload = type;
</script>
